<?xml version="1.0"?>
<config>
    <modules>
        <Clean_Cms>
            <version>1.0.0</version>
        </Clean_Cms>
    </modules>
    <global>
        <blocks>
            <cleancms>
                <class>Clean_Cms_Block</class>
            </cleancms>
        </blocks>
        <helpers>
            <cleancms>
                <class>Clean_Cms_Helper</class>
            </cleancms>
        </helpers>
    </global>

    <cleancms>
        <block_types>
            <markdown>
                <name>Markdown</name>
                <fields>
                    <content>
                        <type>textarea</type>
                        <label>Content</label>
                    </content>
                </fields>
            </markdown>
            <image_with_content>
                <name>Image With Content</name>
                <fields>
                    <image>
                        <type>file</type>
                        <label>Image</label>
                    </image>
                    <paragraph>
                        <type>textarea</type>
                        <label>Paragraph</label>
                    </paragraph>
                </fields>
            </image_with_content>
        </block_types>
    </cleancms>

    <adminhtml>
        <layout>
            <updates>
                <cleancms>
                    <file>cleancms.xml</file>
                </cleancms>
            </updates>
        </layout>
    </adminhtml>
</config>