<?xml version="1.0"?>
<config>
    <modules>
        <Clean_Cms>
            <version>1.0.0</version>
        </Clean_Cms>
    </modules>
    <global>
        <blocks>
            <cleancms>
                <class>Clean_Cms_Block</class>
            </cleancms>
            <cms>
                <rewrite>
                    <page>Clean_Cms_Block_Page</page>
                </rewrite>
            </cms>
        </blocks>
        <helpers>
            <cleancms>
                <class>Clean_Cms_Helper</class>
            </cleancms>
        </helpers>
        <models>
            <cleancms>
                <class>Clean_Cms_Model</class>
                <resourceModel>cleancms_mysql4</resourceModel>
            </cleancms>
            <cleancms_mysql4>
                <class>Clean_Cms_Model_Mysql4</class>
                <entities>
                    <fieldset>
                        <table>cleancms_fieldset</table>
                    </fieldset>
                    <field>
                        <table>cleancms_field</table>
                    </field>
                </entities>
            </cleancms_mysql4>
        </models>
    </global>

    <cleancms>
        <block_types>
            <markdown>
                <name>Markdown</name>
                <block>cleancms/page_fieldset</block>
                <template>cleancms/fieldset/markdown.phtml</template>
                <fields>
                    <title>
                        <type>text</type>
                        <label>Title (Optional)</label>
                    </title>
                    <content>
                        <type>textarea</type>
                        <label>Content</label>
                    </content>
                </fields>
            </markdown>
            <image_with_content>
                <name>Image With Content</name>
                <block>cleancms/page_fieldset</block>
                <template>cleancms/fieldset/image_with_content.phtml</template>
                <fields>
                    <image>
                        <type>file</type>
                        <label>Image</label>
                    </image>
                    <paragraph>
                        <type>textarea</type>
                        <label>Paragraph</label>
                    </paragraph>
                </fields>
            </image_with_content>
        </block_types>
    </cleancms>

    <adminhtml>
        <layout>
            <updates>
                <cleancms>
                    <file>cleancms.xml</file>
                </cleancms>
            </updates>
        </layout>
        <events>
            <cms_page_save_before>
                <observers>
                    <cleancms_cms_page_save_before>
                        <class>Clean_Cms_Model_Observer</class>
                        <method>pageSaveBefore</method>
                    </cleancms_cms_page_save_before>
                </observers>
            </cms_page_save_before>
        </events>
    </adminhtml>
</config>